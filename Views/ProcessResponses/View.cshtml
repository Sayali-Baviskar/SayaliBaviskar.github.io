@model IEnumerable<MVC_UI.Models.ProcessResponse>

@{
    ViewData["Title"] = "View";
    Layout = "~/Views/Shared/ULayout.cshtml";
}

<h1>View</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ComponentProcessing)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProcessingCharge)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PackagingAndDeliveryCharge)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateOfDelivery)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalCharge)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ComponentProcessing.RequestId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProcessingCharge)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PackagingAndDeliveryCharge)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfDelivery)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalCharge)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
