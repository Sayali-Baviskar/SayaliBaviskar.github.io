@model MVC_UI.Models.ProcessResponse

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/ULayout.cshtml";
}
<h1>Process Response Module</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">            
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="RequestId" class="control-label"></label>
                    <select asp-for="RequestId" class="form-control" asp-items="@ViewBag.RequestId"></select>
                    <span asp-validation-for="RequestId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ProcessingCharge" class="control-label"></label>
                    <input asp-for="ProcessingCharge" class="form-control" />
                    <span asp-validation-for="ProcessingCharge" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PackagingAndDeliveryCharge" class="control-label"></label>
                    <input asp-for="PackagingAndDeliveryCharge" class="form-control" />
                    <span asp-validation-for="PackagingAndDeliveryCharge" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DateOfDelivery" class="control-label"></label>
                    <input asp-for="DateOfDelivery" class="form-control" />
                    <span asp-validation-for="DateOfDelivery" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="TotalCharge" class="control-label"></label>
                    <input asp-for="TotalCharge" class="form-control" />
                    <span asp-validation-for="TotalCharge" class="text-danger"></span>
                </div>            
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
