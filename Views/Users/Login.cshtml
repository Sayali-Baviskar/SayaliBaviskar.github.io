    .login {
        opacity: 1.0;
        width: 382px;
        overflow: hidden;
        margin: auto;
        margin: 20px 0 0 350px;
        padding: 70px;
        background-color: lightskyblue;
        background-blend-mode: soft-light;
        border-radius: 5px;
    }

    h2 {
        text-align: center;
        color: #277582;
        padding: 20px;
    }

    label {
        color: black;
        font-size: 17px;
    }

    #Uname {
        width: 300px;
        height: 30px;
        border: none;
