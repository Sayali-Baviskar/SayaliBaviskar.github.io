@model MVC_UI.Models.ComponentProcessing

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/ULayout.cshtml";
}
<style>
    input::-webkit-outer-spin-button,
    input::-webkit-inner-spin-button {
        -webkit-appearance: none;
        margin: 0;
    }

    input[type=number] {
        -moz-appearance: textfield;
    }

    .circle-singleline {
        margin: 20px;
        width: 70px;
        height: 70px;
        border-radius: 50%;
        font-size: 12px;
        line-height: 10px;
        text-align: center;
        background: #808080;
        color: #fff;
        padding:10px
    }

</style>
<h1 class="text-center font-weight-bold">Component Processing Module</h1>

@ViewBag.Message
<hr />
<div class="row">
    <div class="col-md-6">
        <form id="myForm" asp-action="Create" class="border border-dark rounded p-3" style="background-color: lightskyblue">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ContactNumber" class="control-label"></label>
                <input asp-for="ContactNumber" class="form-control" />
                <span asp-validation-for="ContactNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CreditCardNumber" class="control-label"></label>
                <input asp-for="CreditCardNumber" class="form-control" />
                <span asp-validation-for="CreditCardNumber" class="text-danger"></span>
            </div>
           <div class="form-group">
                <label asp-for="ComponentType" class="control-label">Component Type</label>
                <select   asp-for="ComponentType" class="form-select  form-control">
                    <option asp-validation-for="ComponentType">  Integral </option>
                    <option  asp-validation-for="ComponentType">  Accessory </option>
                </select>
                <span class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ComponentName" class="control-label"></label>
                <input asp-for="ComponentName" class="form-control" />
                <span asp-validation-for="ComponentName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" type="number" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsPriorityRequest" /> @Html.DisplayNameFor(model => model.IsPriorityRequest)
                </label>
            </div>
            @*<div class="form-group">
                <label asp-for="OrderPlacedDate" class="control-label"></label>
                <input asp-for="OrderPlacedDate" class="form-control" />
                <span asp-validation-for="OrderPlacedDate" class="text-danger"></span>
            </div>*@
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div class="col-md-6 pt-3">
        <h2 class="text-center p3">Repair and Replacement</h2>
        <p class="text-justify p3">Orders may be return up to 2-5 days after request for return or repair.The products can be return if they are clean and packaging is still usable. </p>
        <p class="text-justify p3">Items within return window and in stock (exact same item) with same seller are eligible for free replacement. The free replacement order will be shipped 
        through standard shipping once the original order is returned. Free replacements can be requested if the following conditions apply:</p>
        <ul class="text-justify p3">
            <li>Item received is physically damaged</li>
            <li>Item received has missing parts or accessories</li>
            <li>Item received is different from their description on the product detail page</li>
            <li>Item received is defective/does not work properly.</li>
        </ul>
        <br>
        <div class="row text-center ">
            <div class="col border-left border-success ">I want a different color or size</div>
            <div class="col border-left border-success">I want a different style</div>
            <div class="col border-left border-success">I want a repair/replacement</div>
        </div>
    </div>
</div>

